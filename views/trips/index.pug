extends ../layout.pug


block content
    .container.justify-content-center.d-flex.align-items-center.w-50
        if user
            a.btn.btn-primary(href="/trips/new") Create New Trip
        if !user
            div
                .alert.alert-warning Create an account or sign in to an existing account to create a new trip:
                a.btn.btn-primary.mr-2(href="/users/login") Log In
                a.btn.btn-primary(href='/users/signup') Create an Account
    .container.mt-5
        .row
            .col.border-light.border-right.p-3 Trips:
                each trip in trips
                    .card.mt-3
                         .card-header.d-flex.justify-content-between #{trip.name}
                            span.text-primary creator
                         .card-body
                            - let d = trip.createdAt
                            - let day = d.getDate()
                            - let month = d.getMonth() + 1
                            - let year = d.getFullYear()
                            - let date = `${month}/${day}/${year}`
                            p.text-info Created: #{date}
                            a.btn.btn-success.mr-2(href="/trips/show/"+ trip.id) Open
            .col.p-3 Search:
                .mt-3
                    .form-group
                        input.form-control(type='text' id='input' placeholder='enter trip id*')
                    button.btn.btn-success(type='submit'  id='search') Search
                p.text-muted *Users who have been invited to join a specific trip will have received the specific ID.  Enter the ID here to view your trip.




