html
  head
    title= title
    link(rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css")
    block head
  body.d-flex.flex-column.justify-content-between
    header
        nav.navbar.navbar-expand-lg.navbar-light.bg-dark
            a.navbar-brand.text-primary(href='/') Trip Planner
            div.navbar-collapse
                ul.navbar-nav.mr-auto
                    li.nav-item.active
                        a.nav-link.text-white(href="/") Home
                    li.nav-item.active
                        a.nav-link.text-white(href="/trips") Trips
                    if !user
                        li.nav-item.active
                            a.nav-link.text-white(href="/users/login") Log In
                        li.nav-item.active
                            a.nav-link.text-white(href="/users/signup") Sign Up
                    if user
                        li.nav-item.active
                            a.nav-link.text-white(href="/users/profile") Profile
                        li.nav-item.active
                            a.nav-link.text-white(href="/users/logout") Log Out                
                
    main.container.mt-3.mb-5
        if (message && message.length > 0)
            div.container.alert-danger.alert #{message}
        block content
    
        

